
  {{set 'mysql/params_common'}}

  {{
    parameter "db_instance/allocated_storage"
    logicalId="AllocatedStorage"
    default="5"
  }}

  {{
    parameter "db_instance/snapshot_identifier"
    logicalId="DBSnapshotIdentifier"
    default=""
    optional=true
  }}
  {{
    condition "m:core" 'is_empty'
    logicalId="DBSnapshotIdentifierIsEmpty"
    parameterLogicalId=(scopeId "DBSnapshotIdentifier")
  }}

  {{
    parameter "db_instance/db_name"
    logicalId="DBName"
    default="condensation"
  }}

  {{
    parameter "m:core" "base"
    logicalId="MasterUsername"
    type="String"
    default="condensation"
  }}

  {{
    parameter "db_instance/password"
    logicalId="MasterUserPassword"
    default="password"
    description="Default is 'password'"
  }}

  {{
    set "m:core" "true_false"
    parameterLogicalId="MultiAZ"
    default="true"
  }}



